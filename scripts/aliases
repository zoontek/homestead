alias ..="cd .."
alias ...="cd ../.."
alias c='clear'

function serve() {
  echo "\"serve\" command is not available in Purestead."
  echo "Use \"serve-hhvm\" or \"serve-php\" instead."
}

function serve-hhvm() {
  if [[ "$1" && "$2" ]]
  then
    sudo dos2unix /vagrant/scripts/serve-hhvm.sh
    sudo bash /vagrant/scripts/serve-hhvm.sh "$1" "$2"
  else
    echo "Error: missing required parameters."
    echo "Usage: "
    echo "  serve-hhvm domain path"
  fi
}

function serve-php() {
  if [[ "$1" && "$2" ]]
  then
    sudo dos2unix /vagrant/scripts/serve-php.sh
    sudo bash /vagrant/scripts/serve-php.sh "$1" "$2"
  else
    echo "Error: missing required parameters."
    echo "Usage: "
    echo "  serve-php domain path"
  fi
}

function create-database() {
  if [[ "$1" ]]
  then
    sudo dos2unix /vagrant/scripts/create-database.sh
    sudo bash /vagrant/scripts/create-database.sh "$1"
  else
    echo "Error: missing required parameters."
    echo "Usage: "
    echo "  create-database name"
  fi
}
